# ============================================
# TALOS Self-Healing Agent - Environment Config
# ============================================

# === GitHub App Configuration ===
GITHUB_APP_ID=your_app_id
GITHUB_PRIVATE_KEY_PATH=talos-private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret

# === Gemini API Keys (multiple for rotation) ===
# Get keys from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY_1=your_first_key
GEMINI_API_KEY_2=your_second_key
GEMINI_API_KEY_3=your_third_key

# === E2B Sandbox ===
# Get from: https://e2b.dev/dashboard
E2B_API_KEY=your_e2b_key

# === Redis (for event streaming) ===
REDIS_URL=redis://localhost:6379

# === Supabase (for persistence) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_key

# === Server Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
